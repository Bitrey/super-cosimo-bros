{
    "tasks": [
        {
            "type": "shell",
            "label": "Create build folder if doesn't exist",
            "command": "mkdir",
            "args": ["-p"],
            "options": {
                "cwd": "${workspaceFolder}/build" // Build result directory
            }
        },
        {
            "type": "shell",
            "label": "Create build with debug symbols",
            // "command": "/usr/bin/cmake",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                ".." // CMakeLists.txt location
            ],
            "options": {
                "cwd": "${workspaceFolder}/build" // Build result directory
            }
        },
        {
            "type": "shell",
            "label": "Create build with debug symbols",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                ".." // CMakeLists.txt location
            ],
            "options": {
                "cwd": "${workspaceFolder}/build" // Build result directory
            }
        },
        {
            "type": "shell",
            "label": "Launch cmake build",
            "command": "cmake",
            "args": [
                "--build",
                "." // Build cache directory
            ],
            "options": {
                "cwd": "${workspaceFolder}/build" // Build result directory
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Create build with debug symbols"]
        }
    ],
    "version": "2.0.0"
}
